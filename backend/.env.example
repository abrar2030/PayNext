# PayNext Backend Environment Variables
# Copy this file to .env and fill in the actual values
# DO NOT commit .env file to version control

# ============================================
# Common Configuration
# ============================================

# Active Spring Profile (dev, test, prod)
SPRING_PROFILES_ACTIVE=dev

# JWT Configuration
JWT_SECRET=your-secret-key-at-least-256-bits-long-for-production-use-only

# ============================================
# Eureka Server Configuration
# ============================================
EUREKA_CLIENT_SERVICEURL_DEFAULTZONE=http://localhost:8001/eureka/

# ============================================
# Database Configuration
# ============================================

# User Service Database
USER_DB_URL=jdbc:mysql://localhost:3306/user_db
USER_DB_USERNAME=root
USER_DB_PASSWORD=changeme

# Payment Service Database
PAYMENT_DB_URL=jdbc:mysql://localhost:3306/payment_db
PAYMENT_DB_USERNAME=root
PAYMENT_DB_PASSWORD=changeme

# Fraud Detection Service Database
FRAUD_DB_URL=jdbc:mysql://localhost:3306/fraud_detection_db?createDatabaseIfNotExist=true&useSSL=false&allowPublicKeyRetrieval=true
FRAUD_DB_USERNAME=root
FRAUD_DB_PASSWORD=changeme

# Notification Service Database
NOTIFICATION_DB_URL=jdbc:mysql://localhost:3306/notification_db
NOTIFICATION_DB_USERNAME=root
NOTIFICATION_DB_PASSWORD=changeme

# ============================================
# Email Configuration (Notification Service)
# ============================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379

# ============================================
# Kafka Configuration
# ============================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# ============================================
# Service Ports (Optional - defaults provided)
# ============================================
EUREKA_PORT=8001
API_GATEWAY_PORT=8002
USER_SERVICE_PORT=8003
PAYMENT_SERVICE_PORT=8004
NOTIFICATION_SERVICE_PORT=8005
FRAUD_DETECTION_SERVICE_PORT=8006

# ============================================
# JPA Configuration
# ============================================
# Options: none, validate, update, create, create-drop
JPA_DDL_AUTO=update

# ============================================
# Development Settings
# ============================================
# Set to true to enable H2 console in dev mode
H2_CONSOLE_ENABLED=true

# Set to false to disable Eureka in standalone mode
EUREKA_ENABLED=true

# ============================================
# Logging Configuration
# ============================================
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_FINTECH=DEBUG

# ============================================
# Security Configuration
# ============================================
# Disable security for local development (not recommended for production)
SECURITY_ENABLED=true
