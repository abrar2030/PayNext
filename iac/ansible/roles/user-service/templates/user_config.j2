# user_config.j2 - Template for user-service configuration file.

server:
  port: {{ user_service_port }}

spring:
  application:
    name: user-service
  datasource:
    url: jdbc:postgresql://{{ db_host }}:{{ db_port }}/{{ db_name }}
    username: {{ db_user }}
    password: {{ db_password }}

eureka:
  client:
    serviceUrl:
      defaultZone: {{ eureka_server_url }}

logging:
  level:
    com.fintech.userservice: DEBUG
